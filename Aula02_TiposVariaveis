using System;

namespace CursoVSCodeSantander
{
    class Program
    {
        static void Main(string[] args)
        {
            //Aula2 - TIPOS DE VARIÁVEIS


            /* Como fazer para abrir um arquivo para C#:


            criar uma pasta
            Ctrl + ' : Serve para abrir o terminal
            dotnet new console: Abre um novo programa em C# já presetado
            dotnet run: rodar o código 
            */

            /*Tipagem de variável

            Variável estática: Já declara qual o tipo da variável (ex: int number = 1;)
            Variável dinâmica: Não declara qual é o tipo dela (ex: var number = 1;)
            */
            
            /*Tipos de variáveis: 
            
            String: Variáveis para escrever caracteres. Esta formada por um conjunto de chars
            Char: é uma variável de apenas 1 caracter
            byte
            Int: variáveis de números inteiras (tem um limite)
            Long: variavel para numeros inteiros (numeros grandes)
            Float: variáveis de números flutuantes (menor do que o double)
            Double: variáveis de números flutuantes intermediário
            Decimal: variável de numero flutuante grande
            Boolean: variável de true or false
            
            *** Variáveis menos usadas: uint, sbyte, short,ushort,ulong
            */

            /*Conversões de Variáveis:

            Primeira forma: Conervt.ToTipodeVariávelFinal() (EX: Convert.ToInt(), Convert.ToString())
            Segunda forma: Cast ou dinamica - Var (Não entendi)
            Terceira Forma: .Parse 
            */
            
            /*Como declarar uma variável
            Existem duas maneiras de declarar uma variável:
            (1) Local tipo nomeVariavel velor(opcional): ex: public int idade; ou public int idade = 25;
            (2) Tipo nomeVariavel velor(opcional): ex: int idade; ou int idade = 25;

            */
            
            
            
            Console.WriteLine("Hello World Tassia!"); //Comando para printar tela e pula para a proxima linga
            Console.Write("Tássia"); //Comando para printar tela mas nao pula a linha
            Console.Write("Tamara");
            Console.WriteLine("");
            Console.WriteLine("Testando Variáveis");

            
            int number = 50;
            var numberNew = 80;
            Console.WriteLine(number);
            Console.WriteLine(numberNew);

            string name = "Tássia";
            var nameNew = "Tássia";
            Console.WriteLine(name);
            Console.WriteLine(nameNew);

            float moeda = 1.5f;
            var moedaNew = 1.5f;
            Console.WriteLine(moeda);
            Console.WriteLine(moedaNew);

            bool code = false;
            bool code2 = true;
            Console.WriteLine(code);
            Console.WriteLine(code2);

            
            //CONVERSÃO EXEMPLOS
            
            bool codigo = bool.Parse("false"); //A função .Parse sempre irá converter uma string em algo. Nesse caso, Converte a string false em um boleano
            Console.WriteLine(codigo);

            int idade = int.Parse("35");//Converteu a string 35 em um inteiro
            Console.WriteLine(idade);

            bool codigo2 = Convert.ToBoolean(false); //A função Convert.To aceita qualquer tipo de variável
            Console.WriteLine(codigo2);





        }
    }
}
