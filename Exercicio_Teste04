using System;

namespace Exercicio04
{
    class Program
    {
        static void Main(string[] args)
        {
            /*Desenvolva um algoritmo que solicite a entrada da idade de um determinado usuário, 
            se for menor que 18 anos exiba na cor vermelha “Sem permissão”, caso seja maior ou igual a 
            18 anos exiba na cor verde “Permissão concedida”.
            */
        
            Console.Write("Informe a sua idade: ");
            int Idade = Convert.ToInt32(Console.ReadLine());

            if(Idade < 18)
            {
                Console.ForegroundColor = ConsoleColor.Red;
                Console.WriteLine("Sem permissão");
            }

            else
            {
                Console.ForegroundColor = ConsoleColor.Green;
                Console.WriteLine("Permissão concedida");
            }
        
        }
    }
}
