using System;

namespace Aula_02
{
    class Program
    {
        static void Main(string[] args)
        {
            //OPERADORES LÓGICOS E CONDICIONAIS

            //Tipos de Condicionais: Comum (if, else if, else),switchCase,ternários


            //if else

            var a = 1;

            if (a == 1)
            {
                Console.WriteLine("O if esta funcionando ");

            }

            else
            {
                Console.WriteLine("Nao caiu na condicao do if");
                
            }

            //switchCase

            var num = 3;

            switch(num)
            {
                case 1: 
                    Console.WriteLine("caso 1");
                    break;
                
                case 2:
                    Console.WriteLine("case 2");
                    break;

                case 3:
                    Console.WriteLine("case 3"); //Se num forigual a 3 print case 3
                    break;

            }

            //Ternario

            var b = 1;

            string test = (b == 1 ? "NeuroHacker" : "CodeGirl" ); //Se b == 1 print NeuroHacker, se não print Code Girl 
            Console.WriteLine(test);


        }
    }
}
