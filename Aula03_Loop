using System;

namespace Aula04
{
    class Program
    {
        static void Main(string[] args)
        {
            //Tipos de Loops: while, do while, for, for each, funções recursivas

            var number = 1;


            // Existem 04 maneiras de quebrar um looping com while: utilizando um contador, condicional e  break, apenas o break, continue

            while(number < 5)
            {
                Console.WriteLine("Teste looping while e contador");
                number += 1;  //Usando contador: É o mesmo que number = number = 1  ou numeber++ (isso funciona como um contador)
            }

            var numberNew = 1;

            while(numberNew < 5)
            {
                Console.WriteLine("Teste looping while e break com condicional");

                if(numberNew == 1) //Usando Condicional e break
                {
                    break;
                }
            }

            var numberNew2 = 1;

            while(numberNew2 < 5)
            {
                Console.WriteLine("Teste looping while");
                break;
            }

            var c = 1;

            while(c <5)
            {
                if (c==1)
                {
                    c++;
                    continue; //Usando o continue
                }

                Console.WriteLine(c);
                c++;
            }


            //OPERAÇÃO COM DO WHILE

            var numberTest = 1;

            do
            {
                
                Console.WriteLine("Teste looping Do While");
                Console.WriteLine(numberTest);
                numberTest++;
            }while(numberTest<=3);


        //LOOPING COM FOR

        for(int idade = 1; idade < 5; idade++) // No for ja instancia tudo: a variável, o range e o contador
        {
            Console.WriteLine("teste looping for");
            Console.WriteLine(idade);
        }


        }

        //LOOPING USANDO FOREACH
        //O foreach é usado principalmente em array

        /*string[] nomes = { "André", "Bruna", "Carla", "Daniel" }; //criando um array
 
		foreach (string nome in nomes) //ira fazer um looping no qual armazenara os itens do array na variavel nome
		{
		  Console.WriteLine(nome);
		}
        */
        

        //FUNÇÃO RECURSIVA: A função chama a própria função
        // Estudar mais sobre função recurssiva
    





    }
}
