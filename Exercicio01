        // Crie um programa que leia um valor em metros e exiba a convers찾o desse valoe em km, hm, dam, dm, cm, mm
        
        public static void CalcularDistancia (float ValorDistancia)
        {
            Console.Write("Digite uma dist창ncia em metros: ");
            ValorDistancia = float.Parse(Console.ReadLine());

            int conv = 1;

            while(conv <= 1000000)
            {
                float Valor = ValorDistancia * conv;
                Console.WriteLine(Valor);
                conv *= 10;
                
            }


        }
        
