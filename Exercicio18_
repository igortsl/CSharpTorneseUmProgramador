using System;

namespace Exercicio18
{
    class Program
    {
        static void Main(string[] args)
        {

            // Faça um programa que leia um angulo qualquer e mostre na tela o valor do seno, 
            // cosseno e tangente
            

            Console.Write("Digite o valor que voce deseja: ");
            double ValorAngulo = Convert.ToDouble(Console.ReadLine()); //Convert.To é igual a .Parse

            double SenoAngulo = Math.Sin(ValorAngulo);
            Console.WriteLine(SenoAngulo.ToString("F"));

            double CossenoAngulo = Math.Cos(ValorAngulo);
            Console.WriteLine(CossenoAngulo.ToString("F"));

            double TangenteAngulo = Math.Tan(ValorAngulo);
            Console.WriteLine(TangenteAngulo.ToString("F"));

        


        }
    }
}
