        //Faça um programa que leia um numero inteiro qualquer e mostre na tela na tela a sua tabuada 


        public static void Tabuada (int NumeroTabuada)
        {
            Console.Write("Digite um número para ver sua tabuada: ");
            NumeroTabuada = Int32.Parse(Console.ReadLine());


            for(int i = 0; i<=10; i++)
            {
                Console.WriteLine("{0} x {1} = {2}", NumeroTabuada, i, NumeroTabuada*i);
                
            }
        }

