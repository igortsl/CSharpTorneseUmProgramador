using System;

namespace Exercicio01
{
    class Program
    {
        static void Main(string[] args)
        {
            //Exercicios tirado do site https://www.satellasoft.com/?materia=lista-de-exercicios-em-csharp

            // Desenvolva um algoritmo que solicite um numero ao usuario e calcule se o numero é par ou impar

            
            
            Console.ForegroundColor = ConsoleColor.Magenta; //Altera a cor
            Console.WriteLine("=========================");
            Console.WriteLine("NeuroHacker code Bootcamp");
            Console.WriteLine("=========================");
            
           
           Console.Write("Digite um numero: "); //Ler o numero
           int numero = Convert.ToInt32(Console.ReadLine()); //armazenar o numero em uma variavel e ira converter
        
            if (numero % 2 == 0)
            {
                Console.WriteLine("O numero " + numero + " é par");
            }

            else
            {
                Console.WriteLine("O nummero " + numero + " é impar");
                
            }
            
           
        }
    }
}
