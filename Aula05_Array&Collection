using System;
using System.Collections.Generic;

namespace Aula05
{
    class Program
    {
        static void Main(string[] args)
        {
            //ARRAY E COLLECTION: São variáveis composta e que prtato armazenam varios itens ddentro dela

            //Sintaxe Array: Tipo[] nome_do_array = new tipo [numero de posições]
            //Sintaxe Collection: List<tipo> nomeDaVAriAvel = new nomeCollection<tipo>()

            //Diferença array e collection: no array ja declara quantos espaço será armazenado e na collection não

            string [] nomes = new string[4];

            nomes[0] = "Tássia";
            nomes[1] = "Tâmara";
            nomes[2] = "Suely";
            nomes[3] = "Vinícius";

            //Primeira forma de mostrar o que tem no array
            Console.WriteLine(nomes[0]); 
            Console.WriteLine(nomes[1]); 
            Console.WriteLine(nomes[2]); 
            Console.WriteLine(nomes[3]); 


            //Segunda forma de mostrar o que tem no array usando o looping foreach
            foreach(string name in nomes)
            {
                Console.WriteLine(name);
            }

            int [] idades = {10, 15, 20, 25}; //Também posso criar um array já informando quains são os valores dentro dele

            foreach (int idade in idades)
            {
                Console.WriteLine(idade);
            } 

            //Criando collections

            List<string> namesStudents = new List<string>();
            namesStudents.Add("Larissa");
            namesStudents.Add("Carlos");
            namesStudents.Add("Fábio");

            Console.WriteLine(namesStudents[0]);
            Console.WriteLine(namesStudents[1]);
            Console.WriteLine(namesStudents[2]);





        }
    }
}
