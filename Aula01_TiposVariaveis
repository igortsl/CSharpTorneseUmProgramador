using System;

namespace Curso_TorneSeUmProgramador
{
    class Program
    {
        static void Main(string[] args)
        {
        
            //Primeiro: apertar o comando (Ctrl + ') :  Esse comando serve para abrir o terminal
            //Segundo: No terminal digitar: dotnet new console (abre um novo pragrama em c#)
            //Terceiro: Para rodar o programa: dotnet run
            
            //TIPOS DE VARIÁVEIS

            /*Todas as variáveis no C# devem ser declarados seu tipo, são eles: 
            int(um inteiro menor), Long(inteiro maior), string(para varios caracteres), char(uma string de um caracter),
            float(numeros com casas flutuantes pequenos), double(semelhante ao float mas aceita mais casas flutuantes), 
            decimal(semelhante ao float e double mas aceita mais casas flutuantes. 
            Primeiro vem o float,depois o double,ddepois decimal),bool, byte
            */

            /*As variáveis podem ser declarasde duas maneiras:Maneira estática e de maneira dinâmica
            Tipagem Estatica - quando declara o tipo de variável. Ex: int,string,bool,float
            Tipagem Dinamica - quandonao declara o tipo de variável e sa o var, este iraidentificar 
            qual o tipo de variavel
            */

            int NumerosAlunos = 25;
            var NumerosAlunos2 = 30;

            string NomeAluno = "Tássia";
            var NomeAluno2 = "Tâmara";

            float media = 1.5f;
            var media2 = 2.55;

            bool resposta = true;
            bool resposta2 = false;
            var resposta3 = true;
            var resposta4 = false;

            Console.WriteLine(NumerosAlunos);
            Console.WriteLine(NumerosAlunos2);
            Console.WriteLine(NomeAluno);
            Console.WriteLine(NomeAluno2);
            Console.WriteLine(media);
            Console.WriteLine(media2);
            Console.WriteLine(resposta);
            Console.WriteLine(resposta2);
            Console.WriteLine(resposta3);
            Console.WriteLine(resposta4);


            //TIPOS DE CONVERSAO

            //Existem dois tipos de conversao: estatica(ConvertTO) e dinamica (cast)

            bool boolean = bool.Parse("false");//Esta convertendo a string false para boleano
            bool boolean2 = Convert.ToBoolean("false"); //esta convertendo a string false para boleano  

            /*A diferenca do Parse para Convert.To é que o parse so aceita string para ser convertido.
            Ja o Convet.To aceita qualquer tipo de variavel
            */

            Console.WriteLine(boolean);
            Console.WriteLine(boolean2);



        }
    }
}
