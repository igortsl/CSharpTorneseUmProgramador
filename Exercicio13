using System;

namespace Exercicio13
{
    class Program
    {
        static void Main(string[] args)
        {
            // Faça um algoritimo que leia  o salario de um funcionario e  mostre seu novo salario com 15% de 
            // aumento


            Console.Write("Qual é o salario do funcionário: ");
            float Salario = float.Parse(Console.ReadLine());

            float reajuste = (Salario * 15) /100;
            float NovoSalario = Salario + reajuste;

            Console.WriteLine("Um funcionario que ganhava {0} com  15% de aumento passa a receber {1}",
            Salario, NovoSalario.ToString("F"));


        }
    }
}
